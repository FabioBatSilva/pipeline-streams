{
    "name":         "pipeline-streams/pipeline-streams",
    "description":  "Support functional-style operations on streams of elements, such as map-reduce transformations on interators and arrays",
    "type":         "library",
    "license":      "MIT",
    "authors": [
        {
            "name": "Fabio B. Silva",
            "email": "fabio.bat.silva@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0"
    },
    "require-dev": {
        "phpunit/phpunit":        "5.*",
        "satooshi/php-coveralls": "~1.0",
        "phpbench/phpbench":      "@dev"
    },
    "autoload": {
        "psr-4": {
            "Pipeline\\": "src/Pipeline"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PipelineTest\\": "test/PipelineTest",
            "PipelineBench\\": "test/PipelineBench"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
